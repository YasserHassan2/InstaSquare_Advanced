<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="60dp"
    android:layout_height="80dp"
    android:layout_marginEnd="8dp"
    android:gravity="center"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.github.siyamed.shapeimageview.RoundedImageView
        android:id="@+id/round_image_view_filter_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/num_1"
        app:siBorderType="fill"/>

    <TextView
        android:id="@+id/text_view_filter_name"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:layout_below="@id/round_image_view_filter_item"
        android:background="#000000"
        android:visibility="gone"
        android:textSize="9sp"
        android:text="Filter"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white"
        android:gravity="center"/>

    <View
        android:id="@+id/view_selected"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/background_card_click"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>